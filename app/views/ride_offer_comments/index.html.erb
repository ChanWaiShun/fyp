<p id="notice"><%= notice %></p>

<h1>Listing Ride Offer Comments</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>&nbsp&nbsp&nbsp&nbsp&nbsp</th>
      <th>Body</th>
      <th>&nbsp&nbsp&nbsp&nbsp&nbsp</th>
      <th>Ride offer id</th>
      <th>&nbsp&nbsp&nbsp&nbsp&nbsp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ride_offer_comments.each do |ride_offer_comment| %>
      <tr>
        <td><%= ride_offer_comment.user_name %></td>
        <th>&nbsp&nbsp&nbsp&nbsp&nbsp</th>
        <td><%= ride_offer_comment.body %></td>
        <th>&nbsp&nbsp&nbsp&nbsp&nbsp</th>
        <td><%= ride_offer_comment.ride_offer_id %></td>
        <th>&nbsp&nbsp&nbsp&nbsp&nbsp</th>
        <th>&nbsp&nbsp&nbsp&nbsp&nbsp</th>
        <th>&nbsp&nbsp&nbsp&nbsp&nbsp</th>
        <td><%= link_to 'Show', ride_offer_comment %></td>
        <th>&nbsp&nbsp&nbsp&nbsp&nbsp</th>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_ride_offer_comment_path(ride_offer_comment) %></td>
        <th>&nbsp&nbsp&nbsp&nbsp&nbsp</th>
        <td><%= link_to 'Destroy', ride_offer_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
    <%= link_to 'Back', ride_offers_path %>
<% else %>
<% end %>