<p id="notice"><%= notice %></p>

<p>
  <strong>Version:</strong>
  <%= @recent_change.version %>
</p>

<p>
  <strong>Date:</strong>
  <%= @recent_change.date %>
</p>

<p>
  <strong>Title:</strong>
  <%= @recent_change.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @recent_change.body %>
</p>

<h3>Comments</h3>
<% @recent_change_comments.each do |recent_change_comment| %>
    <div>
      <strong><%= recent_change_comment.user_name %></strong>
      <br/>
      <p><%= recent_change_comment.body %></p>
      <% if user_signed_in? %>
          <% if current_user.id===2 %>
      <p><%= link_to 'Delete',recent_change_comment_path(recent_change_comment), method: :delete, data: {confirm: 'Are you sure?'} %></p>
          <% end %>
      <% end %>
    </div>
<% end %>
<% if user_signed_in? %>
<%= render 'recent_change_comments/form' %>
<% else %>
<% end %>

<% if user_signed_in? %>
    <% if current_user.id===2 %>
<%= link_to 'Edit', edit_recent_change_path(@recent_change) %> |
    <% end %>
<% end %>
<%= link_to 'Back', recent_changes_path %>
